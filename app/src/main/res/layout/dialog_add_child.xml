<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Nom de l'enfant -->
    <EditText
        android:id="@+id/editTextChildName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom de l'enfant"
        android:inputType="text" />

    <!-- Choix d'avatar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisissez un avatar :"
        android:textAppearance="?android:textAppearanceMedium" />

    <!-- Layout pour les avatars -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Avatar Fille -->

        <!-- Avatar Garçon -->

        <!-- Bouton pour sélectionner depuis la galerie -->
        <ImageView
            android:id="@+id/avatarFemale"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@drawable/border_unselected"
            android:contentDescription="Avatar Fille"
            android:src="@drawable/child_female" />

        <ImageView
            android:id="@+id/avatarMale"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/border_unselected"
            android:contentDescription="Avatar Garçon"
            android:src="@drawable/child_male" />

        <Button
            android:id="@+id/buttonSelectFromGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Galerie" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"/>
    </LinearLayout>


</LinearLayout>

</ScrollView>
